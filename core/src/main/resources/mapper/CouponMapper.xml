<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.triplan.mapper.CouponMapper">

    <insert id="insert" useGeneratedKeys="true" keyProperty="couponId">
        INSERT INTO coupon (
            name,
            num,
            price,
            condition,
            deadline
        ) VALUES (
            #{name},
            #{num},
            #{price},
            #{condition},
            #{deadline}
        )
    </insert>

    <select id="select" resultType="CouponVO">
        SELECT  *
        FROM    coupon
        WHERE   coupon_id = #{couponId}
    </select>

    <update id="update">
        UPDATE  coupon
        SET
                name                = IFNULL(   #{name},            name                ),
                num                 = IFNULL(   #{num},             num                 ),
                price               = IFNULL(   #{price},           price               ),
                usage1              = IFNULL(   #{usage1},          usage1              ),
                condition           = IFNULL(   #{condition},       condition           ),
                deadline            = IFNULL(   #{deadline},        deadline            ),
                res_id              = IFNULL(   #{resId},           res_id              ),
                updated_at          = CURRENT_TIMESTAMP
        WHERE
            coupon_id = #{couponId}
    </update>

    <delete id="delete">
        DELETE
        FROM    coupon
        WHERE   coupon_id = #{couponId}
    </delete>

</mapper>
